<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <div class="navbar-brand">Ruby Tapas</a>
  </div>
  <ul class="nav navbar-nav">
    <li class="active"><a href="/all">All</a></li>
  </ul>
</nav>

<div class="container">
  <table id="episode-list" class="table table-striped">
    <thead>
      <th class="ep-number">Number</th>
      <th class="ep-title">Title</th>
      <th class="ep-description">Description</th>
      <th class="ep-actions">Actions</th>
    </thead>
    <tbody></tbody>
  </table>
</div>

<div class="hidden">
  <div class="episode-action-template">
    <%- episode = Episode.first %>

    <%= form_for Episode.first, { remote: true, html: { class: "watch-episode bottom-buffer" } } do |f| %>
      <%= f.hidden_field(:watched, value: true) %>
      <%= f.submit "Watch Episode", class: "btn btn-default" %>
    <% end %>

    <%= button_to "Read Transcript", episode, method: :get, remote: true, form_class: "read-transcript bottom-buffer", class: "btn btn-success" %>
  </div>
</div>

<div class="modal" id="episode-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 id="modal-title-display" class="modal-title">Title goes here</h4>
      </div>
      <div class="modal-body">
        <p id="modal-transcript-display">Transcript goes here</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="myInput" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
